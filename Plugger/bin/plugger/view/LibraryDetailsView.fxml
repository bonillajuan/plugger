<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plugger.view.LibraryDetailsViewController">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="180.0">
         <children>
            <ImageView fx:id="coverImageView" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <VBox prefHeight="360.0" prefWidth="400.0" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="titoloLabel" text="Titolo">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="artistaLabel" text="Artista">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="albumLabel" text="Album">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label text="Descrizione">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
