<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="700.0" prefWidth="1300.0" spacing="40.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plugger.view.LoginViewController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="300.0" text="P L U G G E R" textAlignment="CENTER">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
      <JFXTextField fx:id="usernameField" alignment="CENTER" prefHeight="25.0" prefWidth="300.0" promptText="Username / E-Mail" VBox.vgrow="NEVER">
         <font>
            <Font size="16.0" />
         </font></JFXTextField>
      <JFXPasswordField fx:id="passwordField" alignment="CENTER" prefHeight="25.0" prefWidth="300.0" promptText="Password" VBox.vgrow="NEVER">
         <font>
            <Font size="16.0" />
         </font>
      </JFXPasswordField>
      <JFXButton fx:id="loginButton" buttonType="RAISED" onAction="#startConnection" prefHeight="60.0" prefWidth="300.0" text="Login" />
      <JFXButton fx:id="registerButton" buttonType="RAISED" onAction="#openRegisterLink" text="Don't have an account? Register now!" textAlignment="CENTER" underline="true" />
   </children>
</VBox>
